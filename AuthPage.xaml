<Page x:Class="Yumagulov41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yumagulov41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Margin="30">
        <!-- 2 столбца по 400, 3 строки: 200 / 150 / 100 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Логин (первая строка) -->
        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="20"
                   Text="Логин"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0"/>

        <TextBox Grid.Row="0" Grid.Column="1"
                 Name="LoginTB"
                 VerticalAlignment="Bottom"
                 Width="200" Height="30" HorizontalAlignment="Center"/>

        <!-- Пароль (вторая строка) -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Пароль" FontSize="20"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0"/>

        <TextBox Grid.Row="1" Grid.Column="1"
                 Name="PassTB"
                 VerticalAlignment="Top"
                 Width="200" Height="30" HorizontalAlignment="Center"/>

        <!-- Кнопки (третья строка) -->
        <Button Grid.Row="2" Grid.Column="0"
                Content="Войти как гость"
                Width="150"
                Height="30"
                Name="Guestbtn"
                Click="Guestbtn_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"/>

        <Button Grid.Row="2" Grid.Column="1"
                Content="Войти"
                Width="150"
                Height="30"
                Name="Loginbtn"
                Click="Loginbtn_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"/>
        <TextBlock x:Name="CaptchaLabel" Grid.Row="1" Grid.Column="1"
                   Text="Введите капчу: " FontSize="20" VerticalAlignment="Top" Margin="0,30,0,0" 
                  Visibility="Collapsed"/>
        <StackPanel Height="30" x:Name="CaptchaPanel" Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left"
                    Grid.Column="1" Visibility="Collapsed" >
            <TextBox  x:Name="CaptchaTB" Width="150" KeyDown="CaptchaTB_KeyDown"/>
            <TextBlock x:Name="captchaOneWord" FontSize="22" Margin="30,0,0,0"/>
            <TextBlock x:Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"/>
            <TextBlock x:Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough"/>
            <TextBlock x:Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>